<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import com.dasa.challenge.labapp.controllers.components.SearchBar?>

<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<fx:root type="VBox" xmlns:fx="http://javafx.com/fxml" styleClass="confirmProcedureMain">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox spacing="10.0" styleClass="confirmProcedureHeader">
        <Label text="Escolha o procedimento" styleClass="confirmProcedureTitle"/>
        <SearchBar/>
    </VBox>

    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="proceduresScrollPane">
        <FlowPane fx:id="proceduresContainer"
                  hgap="12.0" vgap="12.0"
                  prefWidth="600.0"
                  styleClass="proceduresContainer">
        </FlowPane>
    </ScrollPane>

</fx:root>